<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp">

        <RelativeLayout
            android:id="@+id/cRL"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_margin="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/eventName"
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/eventContent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="-5dp"
                    android:text="TextView"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageEvent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="6dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/eventPage"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="eventPage"
                    android:visibility="invisible" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="220dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="222dp">

            <TextView
                android:id="@+id/eventMore"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/eventPrice"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-2dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="152dp"
                android:layout_marginRight="152dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="TextView"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventPrice"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="7dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/eventContent"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventLocation"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="355dp"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="-7dp"
                android:text="TextView"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="TextView"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>